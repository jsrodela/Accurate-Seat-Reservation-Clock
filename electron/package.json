{
  "name": "accurate-seat-reservation-clock",
  "version": "0.2.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder --win portable",
    "type": "commonjs"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.viaark.reserveclock",
    "productName": "Accurate Seat Reservation Clock",
    "files": [
      "main.js",
      "preload.js",
      "renderer.html",
      "renderer.js",
      "icon.ico"
    ],
    "asar": true,
    "win": {
      "target": ["portable"],
      "icon": "icon.ico"
    },
    "portable": {
      "artifactName": "ReserveClock_Portable_${version}.exe"
    }
  }
}
